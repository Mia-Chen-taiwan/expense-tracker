<div class="container mt-3" style="width: fit-content;">
  <div class="row justify-content-between align-items-end">
    <div class="col-auto ml-4 mt-4 d-flex row">
      <h5 class="mr-4">總金額 :</h5>
      <h1 style="font-weight: bold; font-size: 60px; color: rgb(247, 63, 7)">{{ totalAmount }}</h1>
    </div>
    <div class="col-auto">
      <a class="btn btn-warning" href="/records/new"><i class="fas fa-plus mr-2"></i>新增支出</a>
    </div>
  </div>
  <ul class="list-group">
    <div class="row mt-4">
    {{#each records}}
      <li class="list-group-item list-group-item-action d-flex align-items-center">
        <div class="col-2">
          <i class="{{ this.icon }}" style="font-size: 50px;"></i>
        </div>
        <div class="col-5">
          <h4 style="font-weight: bold;">{{ this.name }}</h4>
          <p><small class="text-muted">{{ this.date }}</small></p>
        </div>
        <div class="col-3">
          <h4>{{ this.amount }}</h4>
        </div>
        <div class="col-2 d-flex justify-content-around">
          <a class="btn btn-info mr-2" href="./records/{{ this._id }}/edit"><i class="fas fa-pen"></i></a>
          <form action="/records/{{ this._id }}?_method=DELETE" method="POST" onsubmit="return confirm('確定要刪除這筆紀錄嗎？')">
            <button class="btn btn-danger" type="submit">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </div> 
      </li>
    {{/each}}
    </div>
  </ul>
</div>
