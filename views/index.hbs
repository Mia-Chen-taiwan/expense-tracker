<div>
  <h3>總金額 :</h3>
  <h1>{{ totalAmount }}</h1>
</div>
<ul class="list-group">
  {{#each records}}
  <li class="list-group-item list-group-item-action">
      
      <h4><i class="{{ this.icon }} mr-2"></i>{{ this.name }}</h4>
      <p><small class="text-muted">{{ this.date }}</small></p>
      <h4>{{ this.amount }}</h4>
  </li>
  {{/each}}
</ul>
<a class="btn btn-warning" href="/records/new">新增支出</a>