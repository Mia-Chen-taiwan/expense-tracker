<div>
  <h3>總金額 :</h3>
  <h1>{{ totalAmount }}</h1>
  <a class="btn btn-warning" href="/records/new">新增支出</a>
</div>
<div class="container mt-3" style="width: fit-content;">
  <ul class="list-group">
    <div class="row">
    {{#each records}}
      <li class="list-group-item list-group-item-action d-flex align-items-center">
        <div class="col-2">
          <i class="{{ this.icon }}" style="font-size: 50px;"></i>
        </div>
        <div class="col-5">
          <h4 style="font-weight: bold;">{{ this.name }}</h4>
          <p><small class="text-muted">{{ this.date }}</small></p>
        </div>
        <div class="col-3">
          <h4>{{ this.amount }}</h4>
        </div>
        <div class="col-2 d-flex justify-content-around">
          <a class="btn btn-info mr-2" href="./records/{{ this._id }}/edit"><i class="fas fa-pen"></i></a>
          <a class="btn btn-danger" href="./records/{{ this._id }}/delete"><i class="fas fa-trash"></i></a>
        </div> 
      </li>
    {{/each}}
    </div>
  </ul>
</div>
